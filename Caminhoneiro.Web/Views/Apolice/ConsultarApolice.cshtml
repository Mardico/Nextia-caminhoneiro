@model Caminhoneiro.ViewModel.ApoliceViewModel
@section head
{
    <link rel="stylesheet" href="~/Assets/Css/Apolice/ConsultarApolice.css" type="text/css">
}
<section class="content">
    <div class="card-body">

        @using (Html.BeginForm("DadosCadastrais", "Segurado", FormMethod.Post, new { id = "TabSegurado" }))
        {
            <input type="hidden" name="Id" id="Id" value="@Model.DadosClienteId" />
            <input type="hidden" name="CPF" id="CPF" value="@Model.DadosCliente.CPF" />
            <input type="hidden" name="ApoliceId" id="ApoliceId" value="@Model.Id" />
            <ul class="nav nav-tabs" id="custom-content-above-tab" role="tablist">
                <li class="nav-item">
                    <a class="nav-link " id="tabSegurado" role="tab" aria-selected="true" href="#">
                        Segurado <i class="fas fa-user"></i>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link active" id="tabProdutos" role="tab" aria-selected="false" href="#">
                        Produtos <i class="fa fa-list-alt"></i>
                    </a>
                </li>
            </ul>
        }

        <div class="tab-custom-content">
            <p class="lead mb-0"></p>
        </div>
        <div class="card card-primary card-outline">
            <div class="card-body">
                <ul class="nav nav-tabs" id="custom-content-above-tab" role="tablist">
                    <li class="nav-item">
                        <a class="nav-link active " href="#" id="tabApolice" role="tab" aria-selected="true">
                            Dados Gerais <i class="fas fa-user"></i>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#" id="tabPagamentos" role="tab" aria-selected="false">
                            Pagamentos <i class="fas fa-search-dollar"></i>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link " href="#" id="tabHistorico" role="tab" aria-selected="false">
                            Histórico
                            <i class="fas fa-book-open"> </i>
                        </a>
                    </li>
                </ul>
            </div>
            <div class="invoice p-3 mb-3">
                <h4>
                    Dados Apolice
                </h4>
                <div class="row invoice-info">
                    <div class="col-sm-4 invoice-col">
                        <address>
                            <br>
                            @if (Model != null)
                            {
                                <b>Número :</b> @Model.Codigo<br>
                                <b>Produto:</b> @Model.DadosProduto.Nome<br>
                                <b>Data: </b> @Model.DataInicio.Value.ToString("dd/MM/yyyy")<br>
                            }
                            else
                            {
                                <b>Número :</b> <br>
                                <b>Produto:</b> <br>
                                <b>Data: </b> <br>
                            }
                        </address>
                    </div>
                    <div class="col-sm-4 invoice-col">
                        <address>
                            <br>
                            @if (Model != null)
                            {
                                <b>Prêmio:</b> @Model.DadosProduto.Valor<br>
                                <b>Status:</b> @Model.Status<br>
                            }
                            else
                            {
                                <b>Prêmio:</b> <br>
                                <b>Status:</b> <br>
                            }
                        </address>
                    </div>
                </div>
                <div id="linha"></div>
                <h4>
                    Dados Caminhoneiro
                </h4>
                <div class="row invoice-info">
                    <div class="col-sm-4 invoice-col">
                        <address>
                            <br>
                            @if (Model != null)
                            {
                                <b>Nome :</b> @Model.DadosCliente.Nome<br>
                                <b>CPF:</b> @Model.DadosCliente.CPF<br>
                                <b>Data Nascimento:</b> @Model.DadosCliente.DataNascimento<br>
                                <b>Sexo:</b> @Model.DadosCliente.Sexo<br>
                                <b>Estado Cívil:</b> @Model.DadosCliente.EstadoCivil<br>
                                <b>E-mail:</b> @Model.DadosCliente.Email<br>
                            }
                            else
                            {
                                <b>Nome :</b> <br>
                                <b>CPF:</b> <br>
                                <b>Data Nascimento:</b> <br>
                                <b>Sexo:</b> <br>
                                <b>Estado Cívil:</b> <br>
                                <b>E-mail:</b> <br>
                            }

                        </address>
                    </div>
                    <div class="col-sm-4 invoice-col">
                        <address>
                            <br>
                            @if (Model != null)
                            {
                                <b>CEP:</b> @Model.DadosCliente.CEP<br>
                                <b>Endereço:</b> @Model.DadosCliente.Endereco<br>
                                <b>Número:</b> @Model.DadosCliente.Numero<br>
                                <b>Complemento:</b> @Model.DadosCliente.Complemento<br>
                                <b>Bairro:</b> @Model.DadosCliente.Bairro<br>
                            }
                            else
                            {
                                <b>CEP:</b> <br>
                                <b>Endereço:</b> <br>
                                <b>Número:</b> <br>
                                <b>Complemento:</b> <br>
                                <b>Bairro:</b> <br>
                            }
                        </address>
                    </div>
                    <div class="col-sm-4 invoice-col">
                        <br>
                        @if (Model != null)
                        {
                            <b>Cidade:</b> @Model.DadosCliente.Cidade<br>
                            <b>UF:</b> @Model.DadosCliente.UF<br>
                            <b>Tel Fixo:</b> @Model.DadosCliente.TelefoneFixo<br>
                            <b>Tel Celular:</b> @Model.DadosCliente.TelefoneCelular<br>
                            <b>Tel Celular:</b> @Model.DadosCliente.TelefoneSecundario<br>
                        }
                        else
                        {
                            <b>Cidade:</b> <br>
                            <b>UF:</b> <br>
                            <b>Tel Fixo:</b> <br>
                            <b>Tel Celular:</b> <br>
                            <b>Tel Celular:</b> <br>
                        }
                    </div>
                </div>
                <div id="linha"></div>
                <h4>
                    Dados Caminhão
                </h4>
                <div class="row invoice-info">
                    <div class="col-sm-4 invoice-col">
                        <address>
                            <br>
                            @if (Model != null)
                            {
                                <b>Modelo :</b> @Model.DadosVeiculo.Veiculo<br>
                                <b>Já existe Seguro:</b> @((Model.DadosVeiculo.Segurado ==1) ? "Sim" : "Não")<br>
                                <b>Empresa Seguro/Assistêcia</b> @Model.DadosVeiculo.Seguradora<br>
                                <b>Veículo Próprio/ Finaciado</b> @Model.DadosVeiculo.VeiculoProprio<br>
                            }
                            else
                            {
                                <b>Modelo :</b> <br>
                                <b>Já existe Seguro:</b> <br>
                                <b>Empresa Seguro/Assistêcia</b> <br>
                                <b>Veículo Próprio/ Finaciado</b> <br>
                            }
                        </address>
                    </div>
                    <div class="col-sm-4 invoice-col">
                        <address>
                            <br>
                            @if (Model != null)
                            {
                                <b>Quantidade Viagens</b> @Model.DadosVeiculo.QdadeViagens<br>
                                <b>Entregas</b>@Model.DadosVeiculo.TipoEntrega<br>
                                <b>Renda Líquida</b> @Model.DadosVeiculo.RendaLiquida<br>
                                <b>Já precisou de Assistencia Médica?</b> @((Model.DadosVeiculo.SolicitouServApolice==1) ? "Sim" : "Não")<br>
                            }
                            else
                            {
                                <b>Quantidade Viagens</b> <br>
                                <b>Entregas</b><br>
                                <b>Renda Líquida</b> <br>
                                <b>Já precisou de Assistencia Médica?</b> <br>
                            }
                        </address>
                    </div>
                </div>
                <div id="linha"></div>
                <h4>
                    Dados Pagamento
                </h4>
                <div class="row invoice-info">
                    <div class="col-sm-4 invoice-col">
                        <address>
                            <br>
                            @if (Model != null)
                            {
                                <b>Nome no Cartão:</b> @Model.DadosPagamento.NomeResponsavel<br>
                                <b>Número do Cartão:</b> @Model.DadosPagamento.Conta<br>
                                <b>Data de expiração</b> @Model.DadosPagamento.DataExpiracao<br>
                            }
                            else
                            {
                                <b>Nome no Cartão:</b> <br>
                                <b>Número do Cartão:</b> <br>
                                <b>Data de expiração</b> <br>
                            }
                        </address>
                    </div>
                </div>

            </div>
        </div>
    </div>
</section>
@section scripts
{
    <script src="~/Assets/Js/Apolice/ConsultarApolice.js"></script>
}

