
@{
    ViewBag.Title = "CartaoDigital";
    Layout = "~/Views/MasterPage.cshtml";
}

<link rel="stylesheet" href="~/plugins/sweetalert2/sweetalert2.min.css">
<link rel="stylesheet" href="~/plugins/toastr/toastr.min.css">
<section class="content">
    <div class="card-body">
        <ul class="nav nav-tabs" id="custom-content-above-tab" role="tablist">
            <li class="nav-item">
                <a class="nav-link" href="@Url.Action("DadosCadastrais","Segurado")" role="tab" aria-selected="true">
                    Segurado <i class="fas fa-user"></i>
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="@Url.Action("ListaTodos","Apolice")" role="tab" aria-selected="false">
                    Produtos <i class="fa fa-list-alt"></i>
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link active" href="@Url.Action("KitProduto","Segurado")" role="tab" aria-selected="false">
                    Kit Produto  <i class="fas fa-id-badge"></i>
                </a>
            </li>
        </ul>
        <div class="tab-custom-content">
            <p class="lead mb-0">Kit do Produto</p>
        </div>
        <div class="card card-primary card-outline">
            <div class="card-body">
                <p class="lead mb-0">Selecione para Reenviar:</p>
                <div class="tab-custom-content">

                </div>
                <div class="custom-control custom-switch">
                    <input type="checkbox" class="custom-control-input" id="customSwitch1">
                    <label class="custom-control-label" for="customSwitch1">Apolice(CPF)</label>
                </div>
                <div class="custom-control custom-switch">
                    <input type="checkbox" class="custom-control-input" id="customSwitchCD">
                    <label class="custom-control-label" for="customSwitchCD">Cartão Digital</label>
                </div>

            </div>
            <div class="card-body">
                <div class="tab-custom-content">
                    <p class="lead mb-0">Clique para reenviar:</p>
                </div>
                <img src="~/dist/img/whatsapp-logo.png" width="50" height="50" alt="..." class="img-thumbnail toastrDefaultInfo">
                <img src="~/dist/img/icone-emai.png" width="50" height="50" alt="..." class="img-thumbnail toastrDefaultInfo">
            </div>
        </div>
    </div>

</section>


<script src="~/plugins/jquery/jquery.min.js"></script>
<script src="~/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
<script src="~/plugins/fastclick/fastclick.js"></script>
<script src="~/plugins/sweetalert2/sweetalert2.min.js"></script>
<script src="~/plugins/toastr/toastr.min.js"></script>

<script type="text/javascript">
    $(function () {
        const Toast = Swal.mixin({
            toast: true,
            position: 'top-end',
            showConfirmButton: false,
            timer: 3000
        });

        $('.toastrDefaultInfo').click(function () {
            toastr.info('Dados reenviados com Sucesso!!')
        });
      
    });

</script>


