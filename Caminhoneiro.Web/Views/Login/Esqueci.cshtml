@model Caminhoneiro.ViewModel.SolicitaAcessoViewModel
@{
    Layout = "~/Views/Login/_LayoutAlternativo.cshtml";
}
@section head
{
    <link rel="stylesheet" href="~/Assets/Css/Login/Login.css">
    <script src="~/Assets/Js/Login/Esqueci.js"></script>
    <style>
        .text-error {
            color: red;
            font-size: 12px;
            margin: auto;
            margin-bottom: 10px !important;
        }

        .mb-3 {
            margin-bottom: 15px !important;
        }

        .recaptcha {
            justify-content:center;
        }
    </style>
}
@using (Html.BeginForm("Esqueci", "Login", FormMethod.Post, new { id = "frmEsqueci", name = "frmEsqueci" }))
{
    <div class="input-group mb-3">
        @Html.TextBoxFor(l => l.Usuario, new { @class = "form-control", placeholder = "Usuario", data_error = "#txtUsuarioErro", type="email"})
        <div class="input-group-append">
            <div class="input-group-text">
                <span class="fa fa-user-check"></span>
            </div>
        </div>
    </div>
    <div class="row float-lg-right">
        @Html.ValidationMessageFor(model => model.Usuario, null, new { @class = "text-error", id = "txtUsuarioErro"  })
        <div class="input-group recaptcha mb-3">
            <div class="g-recaptcha" data-sitekey="@ViewBag.SiteKey"></div>
        </div>
        <div class="col-md-12">
            <button type="submit" class="btn btn-primary btn-block btn-flat">Solicitar</button>
        </div>
    </div>
    <center><label class="text-danger text-center">@ViewBag.Erro</label></center>
}
<script src='https://www.google.com/recaptcha/api.js?hl=pt-BR'></script>
<style>
    .rc-anchor-light {
        background: transparent;
    }

    .rc-anchor {
        box-shadow: none !important;
    }

    .rc-anchor-light.rc-anchor-normal {
        border: none !important;
    }
</style>
